<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <TextView
            android:text="@string/song_name"
            android:layout_width="390dp"
            android:layout_height="65dp"
            android:id="@+id/textView"
            android:textSize="24sp"
            android:textColor="@color/colorAccent"
            android:textStyle="bold|italic"
            android:textAllCaps="false"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="11dp"
            app:layout_constraintHorizontal_bias="0.593"
            android:layout_marginTop="48dp" app:layout_constraintTop_toTopOf="parent"
            android:textAlignment="center"/>

    <ImageButton
            android:layout_width="122dp"
            android:layout_height="54dp"
            app:srcCompat="@android:drawable/ic_media_ff"
            android:id="@+id/imageButton"
            app:layout_constraintEnd_toEndOf="parent"
            android:contentDescription="@string/forward"
            android:foreground="@android:drawable/ic_media_next"
            android:layout_marginEnd="60dp"
            app:layout_constraintStart_toEndOf="@+id/imageButton2" android:layout_marginStart="355dp"
            android:layout_marginBottom="11dp" app:layout_constraintBottom_toTopOf="@+id/seekBar"
            android:layout_marginTop="111dp" app:layout_constraintTop_toBottomOf="@+id/textView"/>

    <ImageButton
            android:layout_width="118dp"
            android:layout_height="54dp"
            app:srcCompat="@android:drawable/ic_media_rew"
            android:id="@+id/imageButton2"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="64dp"
            android:contentDescription="@string/reverse"
            android:foreground="@android:drawable/ic_media_previous"
            android:layout_marginTop="224dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="133dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0" app:layout_constraintVertical_bias="1.0"/>

    <ImageButton
            android:layout_width="113dp"
            android:layout_height="53dp"
            app:srcCompat="@android:drawable/ic_media_pause"
            android:id="@+id/imageButton3"
            app:layout_constraintBottom_toBottomOf="parent"
            android:contentDescription="@string/pausebutton"
            android:layout_marginBottom="168dp"
            android:layout_marginTop="46dp"
            app:layout_constraintTop_toBottomOf="@+id/textView" app:layout_constraintVertical_bias="0.387"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="256dp"
            app:layout_constraintEnd_toStartOf="@+id/imageButton4" android:layout_marginEnd="4dp"/>

    <ImageButton
            android:layout_width="132dp"
            android:layout_height="53dp"
            app:srcCompat="@android:drawable/ic_media_play"
            android:id="@+id/imageButton4"
            android:contentDescription="@string/playbutton"
            android:layout_marginTop="44dp"
            app:layout_constraintTop_toBottomOf="@+id/textView"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.072" app:layout_constraintStart_toEndOf="@+id/imageButton3"
            android:layout_marginStart="4dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="226dp"/>

    <SeekBar
            android:layout_width="322dp"
            android:layout_height="53dp"
            android:id="@+id/seekBar"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="42dp"
            android:layout_marginEnd="44dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="60dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.501"
            android:backgroundTint="#FFFFFF"
            android:layout_marginTop="56dp" app:layout_constraintTop_toBottomOf="@+id/imageButton4"
            app:layout_constraintVertical_bias="0.833"/>

</android.support.constraint.ConstraintLayout>