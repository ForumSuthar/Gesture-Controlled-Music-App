<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MusicPlayer">

    <TextView
            android:text="@string/song_name"
            android:layout_width="390dp"
            android:layout_height="65dp"
            android:id="@+id/textView"
            android:textSize="24sp"
            android:textColor="@color/colorAccent"
            android:textStyle="bold|italic"
            android:textAllCaps="false"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="11dp"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintTop_toTopOf="parent"
            android:textAlignment="center" android:layout_marginTop="168dp" android:layout_marginBottom="32dp"
            app:layout_constraintBottom_toTopOf="@+id/imageButton4"/>

    <ImageButton
            android:layout_width="89dp"
            android:layout_height="59dp"
            app:srcCompat="@android:drawable/ic_media_ff"
            android:id="@+id/imageButton"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="195dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="304dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="18dp"
            android:contentDescription="@string/forward"
            android:foreground="@android:drawable/ic_media_next" app:layout_constraintHorizontal_bias="1.0"/>

    <ImageButton
            android:layout_width="86dp"
            android:layout_height="55dp"
            app:srcCompat="@android:drawable/ic_media_rew"
            android:id="@+id/imageButton2"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="198dp"
            app:layout_constraintEnd_toStartOf="@+id/imageButton3"
            android:layout_marginEnd="64dp"
            android:contentDescription="@string/reverse"
            android:foreground="@android:drawable/ic_media_previous"/>

    <ImageButton
            android:layout_width="96dp"
            android:layout_height="55dp"
            app:srcCompat="@android:drawable/ic_media_pause"
            android:id="@+id/imageButton3"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="148dp"
            app:layout_constraintStart_toStartOf="parent"
            android:contentDescription="@string/pausebutton"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.094"
            android:layout_marginBottom="112dp"/>

    <ImageButton
            android:layout_width="87dp"
            android:layout_height="64dp"
            app:srcCompat="@android:drawable/ic_media_play"
            android:id="@+id/imageButton4"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="172dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="161dp"
            android:layout_marginBottom="148dp"
            app:layout_constraintBottom_toTopOf="@+id/imageButton3"
            android:contentDescription="@string/playbutton" app:layout_constraintHorizontal_bias="1.0"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.968"/>

    <SeekBar
            android:layout_width="322dp"
            android:layout_height="53dp"
            android:id="@+id/seekBar"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="42dp"
            android:layout_marginEnd="44dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.666"
            android:backgroundTint="#FFFFFF"
            android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@+id/imageButton3"/>

</android.support.constraint.ConstraintLayout>