<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:id="@+id/loginLayout"
        android:background="@drawable/main_screen" android:backgroundTintMode="multiply"
        android:backgroundTint="#FFFFFF">

    <EditText
            android:layout_width="353dp"
            android:layout_height="55dp"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/editText_user"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textAlignment="viewStart"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="14dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="21dp"
            app:layout_constraintHorizontal_bias="0.652"
            android:autofillHints="" android:layout_marginBottom="27dp"
            app:layout_constraintBottom_toTopOf="@+id/editText_password"
            android:hint="Email" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="0.716"/>
    <EditText
            android:layout_width="358dp"
            android:layout_height="50dp"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/editText_password"
            android:textStyle="bold"
            android:textSize="24sp"
            tools:text="Password"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="14dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="25dp"
            app:layout_constraintHorizontal_bias="1.0"
            android:autofillHints=""
            app:layout_constraintBottom_toTopOf="@+id/btn_login" android:layout_marginBottom="8dp"
            android:hint="Password" android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.768"/>
    <Button
            android:text="@string/login"
            android:layout_width="180dp"
            android:layout_height="47dp"
            android:id="@+id/btn_login"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="112dp"
            tools:layout_editor_absoluteY="420dp" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.027"/>
    <Button
            android:text="@string/sign_up"
            android:id="@+id/btn_sign_up"
            android:layout_width="207dp"
            android:layout_height="45dp"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="156dp" app:layout_constraintBottom_toBottomOf="parent"

            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/btn_login"
            app:layout_constraintVertical_bias="1.0"/>
</android.support.constraint.ConstraintLayout>